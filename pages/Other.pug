.sidebar
  a(href='/' style='background-color: white;color: black;border: 2px solid black;border-radius: 10px;padding: 10px;text-decoration: none;')
    i.fa.fa-fw.fa-home
    | Home
  a(href='/profile' style='background-color: white;color: black;border: 2px solid black;border-radius: 10px;padding: 10px;text-decoration: none;')
